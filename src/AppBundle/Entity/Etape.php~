<?php
namespace AppBundle\Entity;
use Symfony\Component\Validator\Constraints as CSTRT;
use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Entity
 * @ORM\Table(name="Etape")
 * Etape est une assocation n,n entre la table Ville et Trajet
 */
class Etape
{
	/**
	 * @ORM\Column(name="ID_Trajet", type="integer")
	 * @ORM\Id
	 * @ORM\ManyToOne(targetEntity="OC\PlatformBundle\Entity\Trajet")
	 * @ORM\JoinColumn(nullable=false)
	 */
	private $ID_trajet;
	/**
	 * @ORM\Column(name="ID_Ville", type="integer")
	 * @ORM\Id
	 * @ORM\ManyToOne(targetEntity="OC\PlatformBundle\Entity\Ville")
	 * @ORM\JoinColumn(nullable=false)
	 */
	private $ID_Ville;

	/**
	 * @ORM\Column(name="HeureEtape", type="datetime")
	 */
	private $H_etape;

    /**
     * Set iDTrajet
     *
     * @param integer $iDTrajet
     *
     * @return Etape
     */
    public function setIDTrajet($iDTrajet)
    {
        $this->ID_trajet = $iDTrajet;

        return $this;
    }

    /**
     * Get iDTrajet
     *
     * @return integer
     */
    public function getIDTrajet()
    {
        return $this->ID_trajet;
    }

    /**
     * Set iDVille
     *
     * @param integer $iDVille
     *
     * @return Etape
     */
    public function setIDVille($iDVille)
    {
        $this->ID_Ville = $iDVille;

        return $this;
    }

    /**
     * Get iDVille
     *
     * @return integer
     */
    public function getIDVille()
    {
        return $this->ID_Ville;
    }

    /**
     * Set hEtape
     *
     * @param \DateTime $hEtape
     *
     * @return Etape
     */
    public function setHEtape($hEtape)
    {
		//FORMAT NEEDED
		$format = 'Y-m-d H:i:s';
		//Test format date 
		$date = DateTime::createFromFormat($format, $hEtape);
        $this->H_etape = $date;
        return $this;
    }

    /**
     * Get hEtape
     *
     * @return \DateTime
     */
    public function getHEtape()
    {
        return $this->H_etape;
    }
}
