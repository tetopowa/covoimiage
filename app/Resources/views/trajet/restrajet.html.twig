{% extends 'base.html.twig' %}

{% block body %}
<div class="content-section-b">
  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-sm-6">
        <h2 class="section-heading">{{titre}}<br></h2>
      </div>
    </div>
    <div class="row">
      {% for trajet in trajets %}

      <a href="" data-toggle="modal" data-target="#{{trajet.ID_trajet}}">
        <div class="col-md-4 col-sm-6">
          <div class="thumbnail">
            <div class="caption">
              <h3>{{trajet.date|date('D-d-M-Y')}} Ã  {{trajet.heure}}h{{trajet.min}}</h2>
                <h3>{{trajet.villedep|split(',')[0]}} -> {{trajet.villefin|split(',')[0]}}</h2>
                  <h4>Places restantes : {{trajet.nbplaces}}</h1>
                  </div>
                </div>
              </div>
            </a>
            <div class="modal fade" id="{{trajet.ID_trajet}}">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  {{render(controller('AppBundle:Trajet:loadTrajet', {'id' : trajet.ID_trajet}))}}
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endblock %}
      {% block javascripts %}
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD3z3kJLlB-90weDg5R5M-ufw61cRMpvRE&signed_in=true&libraries=places&callback=initMap"
      async defer></script>
    {% endblock %}
