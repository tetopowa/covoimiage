{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
<div class="content-section-b">
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1>Modification du profil</h1>
              {% if error %}
                  <div class="alert alert-danger">
                      {{ error.messageKey|trans(error.messageData, 'security') }}
                  </div>
              {% endif %}
              {% if form %}
                  {#FILLIN PROFILE FORM#}
              {{ form_start(form) }}
                  {{ form_row(form._nom) }}
                  {{ form_row(form._prenom) }}
                  {{ form_row(form._dateNaissance) }}
                  {{ form_row(form._sexe) }}
                  <button type="submit" class="btn btn-success">Modification</button>
              {{ form_end(form) }}
              {% else %}
                  {#DISPLAY THE EXISTING PROFILE WITH AN MODIFY BUTTON#}
              {%  endif %}

          </div>
      </div>
  </div>
</div>

{% endblock %}
