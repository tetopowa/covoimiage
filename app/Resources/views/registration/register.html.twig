{# app/Resources/views/registration/register.html.twig #}

{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends 'base.html.twig' %}
{% block title %}{% trans %}Inscription{% endtrans %} | CovoiMiage{% endblock %}
{% block nav %}
<nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
  <div class="container topnav">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand topnav" href="/">CovoiMiage</a>
    </div>
  </div>
</nav>

{% endblock %}
{% block body %}
<div class="content-section-b">
  <div class="container">
    <div class="row">
      <h2 class="section-heading">{% trans %}transDéjà inscrit {% endtrans %}?<br></h2>
      <div class="dropdown">
        <button class="btn btn-primary" type="button" data-toggle="dropdown">{% trans %}Se connecter{% endtrans %}
          <span class="caret"></span></button>
          <ul id="login-dp" class="dropdown-menu">
            <li>
              <div class="row">
                <div class="col-md-12">
                  <{{ render(controller('AppBundle:Security:login')) }}
                  <div class="bottom text-center">
                    {% trans %}Pas encore inscrit{% endtrans %}?<a href="/register"><br><b>{% trans %}S'inscrire{% endtrans %} !</b></a>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content-section-a">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 ">
          <br>
          <br>
          <img src="{{asset('img/lvp_inscrip.jpg')}}" alt="">
        </div>
        <div class="col-lg-5 col-lg-offset-1">
          <h2 class="section-heading">{% trans %}Formulaire d'inscription{% endtrans %}:<br></h2>

          {{ form(form) }}
        </div>
      </div>
    </div>
  </div>

  {% endblock %}

  {% block javascripts %}
  {% endblock %}
